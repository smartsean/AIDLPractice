<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/start_connect"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="建立连接"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/start_chat"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="开启聊天"
        app:layout_constraintLeft_toRightOf="@+id/start_connect"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/stop_chat"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="终止聊天"
        app:layout_constraintLeft_toRightOf="@id/start_chat"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/send_message"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="发送消息"
        app:layout_constraintLeft_toRightOf="@id/stop_chat"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/dis_connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="女朋友断网"
        app:layout_constraintLeft_toRightOf="@id/send_message"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/send_message">

        <TextView
            android:id="@+id/message_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DDDD" />
    </ScrollView>
</android.support.constraint.ConstraintLayout>